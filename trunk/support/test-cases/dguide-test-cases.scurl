{import * from COM.CURL.CDU.DEPLOY-SUPPORT}

{value
    || generate files from dguide TOC
    def contents-loc = 
        {url "../../code/docs/en/dguide/_contents.scurl"}
    def locs = {guide-content-files contents-loc}

    || generate suite
    def suite = 
        {TestSuite {lmessage WSDK dguide pages},
            || "guard" test first
            {test-case "IDE precondition",
                {if not {package-available? "CURL.IDE.DOCUMENTATION"} then
                    {TestCondition.terminate message = "IDE unavailable"}}}
        }
    {for loc in locs do
        def name = 
            {if loc.query.empty? 
             then loc.filename
             else loc.query}
        {suite.add 
            {AppletTestCase loc, 
                name = name}}
    }
    suite
}
